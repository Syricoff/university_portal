# Flask конфигурация
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_RUN_PORT=5000

# Секретный ключ (изменить на свой)
SECRET_KEY=your-secret-key-here

# База данных
DATABASE_URL=sqlite:///instance/university.db
# Для PostgreSQL используйте: postgresql://username:password@localhost/dbname
# Для MySQL используйте: mysql://username:password@localhost/dbname

# Пример настроек для продакшн-среды (раскомментировать)
# FLASK_ENV=production
# FLASK_DEBUG=0
# SECRET_KEY=super-secret-key-for-production
# DATABASE_URL=postgresql://db_user:db_password@db_host:5432/university_db
